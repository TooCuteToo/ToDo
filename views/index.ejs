<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/style/font-awesome.css">
  <link rel="stylesheet" href="/style/style.css">
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="clear">
        <i class="fa fa-refresh"></i>
      </div>
      <div id="date"></div>
    </div>

    <div class="content">
      <ul id="list">
      <% docs.forEach((doc) => { %>
        <%- include("./show.ejs", {name: doc.name, id: doc._id, done: doc.done}); %>
      <% }); %>
        <!-- <li class="item">
          <i class="fa fa-circle-thin co" job="complete" id="0"></i>
          <p class="text">Magic work</p>
          <i class="fa fa-trash-o de" job="delete" id="0"></i>
        </li> -->
      </ul>
    </div>

    <div class="add-to-do">
      <form action="/" method="POST">
        <i class="fa fa-plus-circle"></i>
        <input name="name" type="text" id="input" placeholder="Add a work">
        <input name="done" type="hidden" id="done">
      </form>
    </div>
  </div>
  <%- include("./script/script.ejs") %>
</body>
</html>